// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model EarlyAccessSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  
  // Device Fingerprinting
  deviceFingerprint String?  @unique
  
  // Location Data
  ipAddress String?
  country   String?
  city      String?
  region    String?
  timezone  String?
  
  // Browser/Device Info
  userAgent String?
  browser   String?
  os        String?
  device    String?
  
  // Screen Info
  screenWidth  Int?
  screenHeight Int?
  
  // Referral Info
  referrer     String?
  landingPage  String?
  utmSource    String?
  utmMedium    String?
  utmCampaign  String?
  
  // Engagement
  language     String?
  
  // Visit tracking
  lastVisitAt  DateTime @default(now())
  visitCount   Int      @default(1)
  
  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([deviceFingerprint])
  @@index([country])
  @@index([createdAt])
}


model FeaturedProduct {
  id              String   @id @default(cuid())
  shopifyProductId String  @unique // Numeric Shopify Product ID
  displayOrder    Int      @default(0) // To control product ordering
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@index([isActive])
  @@index([displayOrder])
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String   @unique
  code      String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
  @@index([expiresAt])
}

model CustomerSession {
  id                  String   @id @default(cuid())
  email               String   @unique
  token               String   @unique
  shopifyAccessToken  String   @default("")
  expiresAt           DateTime
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  @@index([email])
  @@index([token])
  @@index([expiresAt])
}